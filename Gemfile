source 'https://rubygems.org'

gem 'rails'

# Heroku recommends this web server.
gem 'thin'

# Use postgres for development and production but not testing.
gem 'pg'
group :test do
  gem 'sqlite3'
end

# Support serving JSON to the client.
gem 'json'

# Use Omniauth for authenticating with FB and G+.
gem 'omniauth-facebook'
gem 'omniauth-google-oauth2'

# Use this XML parser for parsing the arXiv API responses.
gem 'libxml-ruby'

# Use Rufus for periodic tasks like crawling the arXiv.
gem 'rufus-scheduler'

group :assets do
  gem 'sass-rails', '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
  gem 'therubyracer', :platforms => :ruby

  # Use the jquery library in the client.
  gem 'jquery-rails'

  # User Twitter's Bootstrap library for CSS.
  gem 'bootstrap-sass', '>= 2.1.0'
end
